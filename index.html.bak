{% capture footer_scripts %}
  <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
{% endcapture %}

{% capture content %}
  {% for section in pages %}
    <section class="features-section features-{{ section.slug }}">
      <div class="features-section--inner">
        <h1 class="feature-sections--title">{{ section.title }}</h1>
        <div class="feature-sections--body">{{ section.body }}</div>

        <div class="features">
          {% for feature in section.pages %}
            <article class="feature feature-{{ feature.slug }}">
              <div class="feature--info">
                <h2 class="feature--title{% if feature.meta.heading_icon %} ss-{{ feature.meta.heading_icon }}{% endif %}">{{ feature.title }}</h2>
                {{ feature.body }}
              </div>
              {% if feature.meta.graphic_html %}
                <div class="feature--graphic">{{ feature.meta.graphic_html }}</div>
              {% endif %}

              {% if feature.pages.size > 0 %}
                <div class="subfeatures">
                  {% for subfeature in feature.pages %}
                    <article class="subfeature subfeature-{{ feature.slug }}">
                      <h2 class="subfeature--title{% if subfeature.meta.heading_icon %} ss-{{ subfeature.meta.heading_icon }}{% endif %}">{{ subfeature.title }}</h2>
                      <div class="subfeature--body">{{ subfeature.body }}</div>
                    </article>
                  {% endfor %}
                </div>
              {% endif %}
            </article>
          {% endfor %}
        </div>

        {% if section.slug == 'develop' %}
          <div class="features-develop--graphic">
            {{ section.meta.graphic_html | markdown:true }}
          </div>
        {% endif %}
      </div>
    </section>
  {% endfor %}

  <section class="layer get-started">
    <section>
      <h3 class="get-started--title">Create your website now!</h3>
      <div>
        <button class="green-button large-button" onclick="location.href='/plans';">Get started</button>
      </div>
    </section>
  </section>
{% endcapture %}
{% include 'layouts/default' %}